@model ImageSharingWithCloudService.Models.ImageView
@{
    ViewBag.Title = "Edit Images";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@{  Html.BeginForm("Edit", "Images", FormMethod.Post);

}

<fieldset>
    <legend>Edit Image Information </legend>

    @*
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
    *@

    @*
        <p><img src="@Url.Content("~/Content/Images/img-" + @Model.Id + ".jpg" )" /></p>
    *@

    <p> <img src="@Model.Uri" /></p>


    <p>Image id: @Model.Id</p>

    <p>
        Caption:@Html.TextBoxFor(m => m.Caption)
        @Html.ValidationMessageFor(m => m.Caption)
    </p>
    <p>Select a tag: @Html.DropDownList("TagId", ViewBag.Tags as SelectList)</p>
    <p>
        Description : <br />
        @Html.TextAreaFor(m => m.Description,
    @*"Enter description here.",*@ 5, 40, null)
        @Html.ValidationMessageFor(m => m.Description)
    </p>
    <p>
        Date taken : @Html.TextBoxFor(m => m.DateTaken)
        @Html.ValidationMessageFor(m => m.DateTaken)
    </p>
    @*
         <p>
            <input type="file" name="ImageFile" />
        </p>
    *@

    <p>
        <input type="submit" value="Submit Changes" />
    </p>
</fieldset>

<p>@ViewBag.Message</p>
<p>
    @Html.ValidationSummary()
</p>
@{
    Html.EndForm();
}

















